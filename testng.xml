<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Browser Test Suite" verbose="2">

    <!-- PARALLEL EXECUTION MODES:
         
         Sequential (Default): No parallel execution
         <suite name="..." parallel="false" thread-count="1">
         
         Method Level: Runs test methods in parallel
         <suite name="..." parallel="methods" thread-count="4">
         
         Class Level: Runs test classes in parallel
         <suite name="..." parallel="classes" thread-count="4">
         
         Test Level: Runs test elements in parallel
         <suite name="..." parallel="tests" thread-count="4">
    -->
    
    <test name="Chrome Tests" parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="runners.CucumberTestRunner"/>
        </classes>
    </test>

    <test name="Firefox Tests" parallel="methods" thread-count="2">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="runners.CucumberTestRunner"/>
        </classes>
    </test>

</suite>
